{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "allowJs": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}